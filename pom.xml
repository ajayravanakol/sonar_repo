<project>
  <!-- Other project configuration -->

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>3.3.1</version> <!-- Use a compatible version -->
        <configuration>
          <!-- Specify the location of the web.xml file -->
          <webXml>src/main/webapp/WEB-INF/web.xml</webXml>
          <!-- Include other necessary resources -->
          <webResources>
            <resource>
              <directory>src/main/webapp</directory>
              <includes>
                <include>**/*.html</include>
                <include>**/*.jsp</include>
                <!-- Add other necessary resources here -->
              </includes>
            </resource>
          </webResources>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <!-- Other project configuration -->

</project>
